<Window x:Class="BalatroSaveAndLoad.JsonViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Balatro Save File Viewer"
        Height="600"
        Width="800"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource TextForegroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Current Save File Content (Lua Dictionary Format)"
                       Margin="10,5,10,5"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextForegroundBrush}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Font Size:"
                           Margin="5,5,5,5"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextForegroundBrush}"/>
                <ComboBox x:Name="FontSizeComboBox"
                          Width="50"
                          Margin="0,5,10,5"
                          SelectedIndex="1"
                          SelectionChanged="FontSizeComboBox_SelectionChanged"
                          Style="{StaticResource ThemedComboBoxStyle}">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <TextBox Grid.Row="1"
                 Name="JsonTextBox"
                 IsReadOnly="True"
                 FontFamily="Consolas, Courier New, monospace"
                 FontSize="12"
                 Background="{DynamicResource ListBoxBackgroundBrush}"
                 Foreground="{DynamicResource ControlForegroundBrush}"
                 BorderBrush="{DynamicResource ListBoxBorderBrush}"
                 Margin="10"
                 TextWrapping="NoWrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto">
            <TextBox.ContextMenu>
                <ContextMenu Background="{DynamicResource ControlBackgroundBrush}"
                             BorderBrush="{DynamicResource ControlBorderBrush}">
                    <MenuItem Header="Copy Selected Text" Click="CopySelected_Click"
                              Background="{DynamicResource ControlBackgroundBrush}"
                              Foreground="{DynamicResource ControlForegroundBrush}" />
                    <MenuItem Header="Copy All Text" Click="CopyAll_Click"
                              Background="{DynamicResource ControlBackgroundBrush}"
                              Foreground="{DynamicResource ControlForegroundBrush}" />
                    <Separator />
                    <MenuItem Header="Save As..." Click="SaveAs_Click"
                              Background="{DynamicResource ControlBackgroundBrush}"
                              Foreground="{DynamicResource ControlForegroundBrush}" />
                    <Separator />
                    <MenuItem Header="Find..." Click="Find_Click"
                              Background="{DynamicResource ControlBackgroundBrush}"
                              Foreground="{DynamicResource ControlForegroundBrush}" />
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>

        <StatusBar Grid.Row="2"
                   Background="{DynamicResource StatusBarBackgroundBrush}"
                   Foreground="{DynamicResource StatusBarForegroundBrush}"
                   Height="24"
                   Margin="10,0,10,10">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock"
                           Text="Lua dictionary format shown. This is not JSON but the native Balatro save format."
                           Foreground="{DynamicResource StatusBarForegroundBrush}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
