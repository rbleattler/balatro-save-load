<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="https://github.com/avaloniaui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"             xmlns:vm="clr-namespace:BalatroSaveToolkit.ViewModels"
             xmlns:converters="clr-namespace:BalatroSaveToolkit.Converters"
             x:Class="BalatroSaveToolkit.Views.SaveContentView"
             mc:Ignorable="d"
             MinWidth="600" MinHeight="400">    <UserControl.DataContext>
        <vm:SaveContentViewModel />
    </UserControl.DataContext>
      <UserControl.Resources>
        <converters:ViewModeConverter x:Key="BoolToViewModeConverter" />
    </UserControl.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="20">
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Save File Content Viewer" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />        <!-- Toolbar -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,Auto,*,Auto" Margin="0,0,0,10">
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="10">
                <Button Content="Reload" Command="{Binding LoadContentCommand}" IsEnabled="{Binding !IsLoading}"
                        ToolTip.Tip="Reload the save file content" Margin="0,0,5,0" />                <ToggleButton Content="{Binding IsStatisticsViewActive, Converter={StaticResource BoolToViewModeConverter}}"
                         IsChecked="{Binding IsStatisticsViewActive}"
                         Command="{Binding ToggleViewCommand}" IsEnabled="{Binding HasGameStats}"
                         ToolTip.Tip="Toggle between raw content and game statistics view" Margin="0,0,5,0" />
                <Button Content="Copy All" Name="CopyAllButton" Click="CopyAll_Click" IsEnabled="{Binding HasContent}"
                        ToolTip.Tip="Copy all content to clipboard" Margin="0,0,5,0" />
                <Button Content="Copy Selected" Name="CopySelectedButton" Click="CopySelected_Click" IsEnabled="{Binding HasContent}"
                        ToolTip.Tip="Copy selected text to clipboard" Margin="0,0,5,0" />
                <Button Content="Find" Name="FindButton" Click="Find_Click" IsEnabled="{Binding HasContent}"
                        ToolTip.Tip="Search for text in content" Margin="0,0,5,0" />
                <Button Content="Save As..." Name="SaveAsButton" Click="SaveAs_Click" IsEnabled="{Binding HasContent}"
                        ToolTip.Tip="Save content to a file" />
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5" Margin="10,0,0,0">
                <TextBlock VerticalAlignment="Center" Text="Font Size:" />
                <ComboBox Name="FontSizeComboBox" Width="70" SelectedIndex="1" SelectionChanged="FontSizeComboBox_SelectionChanged">
                    <ComboBoxItem Content="10" />
                    <ComboBoxItem Content="12" />
                    <ComboBoxItem Content="14" />
                    <ComboBoxItem Content="16" />
                    <ComboBoxItem Content="18" />
                    <ComboBoxItem Content="20" />
                </ComboBox>
            </StackPanel>

            <ProgressBar Grid.Column="2" IsVisible="{Binding IsLoading}" IsIndeterminate="True"
                         Height="16" Margin="10,0,0,0" HorizontalAlignment="Left" Width="150" />

            <TextBlock Grid.Column="3" Text="{Binding ErrorMessage}" Foreground="Red" VerticalAlignment="Center"
                       IsVisible="{Binding !!ErrorMessage}" />
        </Grid>        <!-- Content -->
        <Border Grid.Row="2" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="5" Padding="10">
            <Grid>
                <!-- Raw Content View -->
                <Grid IsVisible="{Binding !IsStatisticsViewActive}">
                    <TextBox Name="ContentTextBox" Text="{Binding DisplayContent}" IsReadOnly="True" AcceptsReturn="True"
                             FontFamily="Consolas" FontSize="14" VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto" MinHeight="300"/>
                    <TextBlock IsVisible="{Binding !HasContent}" Text="No content to display"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="{DynamicResource TextFadedForegroundBrush}" />
                </Grid>

                <!-- Game Statistics View -->
                <Grid IsVisible="{Binding IsStatisticsViewActive}">
                    <ScrollViewer>
                        <StackPanel Spacing="10" Margin="5">
                            <TextBlock IsVisible="{Binding !HasGameStats}" Text="No game statistics available"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextFadedForegroundBrush}" />

                            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" IsVisible="{Binding HasGameStats}">
                                <!-- Profile Information -->
                                <Border Grid.Row="0" Grid.ColumnSpan="2" Classes="SectionHeader" Padding="5" Margin="0,0,0,10"
                                        Background="{DynamicResource SystemAccentColor}" CornerRadius="3">
                                    <TextBlock Text="Save Profile Information" FontWeight="Bold" Foreground="White" />
                                </Border>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Profile:" FontWeight="Bold" Margin="0,0,10,0" />
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding GameStats.ProfileNumber}" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Deck:" FontWeight="Bold" Margin="0,0,10,0" />
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding GameStats.DeckName}" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Round:" FontWeight="Bold" Margin="0,0,10,0" />
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding GameStats.Round}" />

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Coins:" FontWeight="Bold" Margin="0,0,10,0" />
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding GameStats.Coins}" />

                                <!-- Jokers Section -->
                                <Border Grid.Row="5" Grid.ColumnSpan="2" Classes="SectionHeader" Padding="5" Margin="0,15,0,10"
                                        Background="{DynamicResource SystemAccentColor}" CornerRadius="3">
                                    <TextBlock Text="Jokers" FontWeight="Bold" Foreground="White" />
                                </Border>
                            </Grid>

                            <!-- Joker Items -->
                            <ItemsControl Grid.Row="6" Grid.ColumnSpan="2" Items="{Binding GameStats.Jokers}" IsVisible="{Binding HasGameStats}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                                            <TextBlock Text="{Binding}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>                            <!-- Cards Section -->
                            <Border Grid.Row="7" Grid.ColumnSpan="2" Classes="SectionHeader" Padding="5" Margin="0,15,0,10"
                                    Background="{DynamicResource SystemAccentColor}" CornerRadius="3" IsVisible="{Binding HasGameStats}">
                                <TextBlock Text="Cards" FontWeight="Bold" Foreground="White" />
                            </Border>

                            <!-- Card Items -->
                            <ItemsControl Grid.Row="8" Grid.ColumnSpan="2" Items="{Binding GameStats.Cards}" IsVisible="{Binding HasGameStats}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                                            <TextBlock Text="{Binding}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Special Items Section -->
                            <Border Grid.Row="9" Grid.ColumnSpan="2" Classes="SectionHeader" Padding="5" Margin="0,15,0,10"
                                    Background="{DynamicResource SystemAccentColor}" CornerRadius="3"
                                    IsVisible="{Binding #SpecialItemsControl.Items.Count}">
                                <TextBlock Text="Special Items" FontWeight="Bold" Foreground="White" />
                            </Border>

                            <!-- Special Items -->
                            <ItemsControl Grid.Row="10" Grid.ColumnSpan="2" Items="{Binding GameStats.SpecialItems}"
                                          Name="SpecialItemsControl" IsVisible="{Binding HasGameStats}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1" CornerRadius="3" Padding="5" Margin="2">
                                            <TextBlock Text="{Binding}" />
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Metadata Section -->
                            <Border Grid.Row="11" Grid.ColumnSpan="2" Classes="SectionHeader" Padding="5" Margin="0,15,0,10"
                                    Background="{DynamicResource SystemAccentColor}" CornerRadius="3" IsVisible="{Binding HasGameStats}">
                                <TextBlock Text="Additional Metadata" FontWeight="Bold" Foreground="White" />
                            </Border>

                            <!-- Metadata Grid -->
                            <Grid Grid.Row="12" Grid.ColumnSpan="2" ColumnDefinitions="Auto,*"
                                  RowDefinitions="Auto,Auto" IsVisible="{Binding HasGameStats}" Margin="5,0,0,0">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Timestamp:" FontWeight="Bold" Margin="0,0,10,5" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding GameStats.Timestamp, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}" />

                                <ItemsControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Items="{Binding GameStats.Metadata}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid ColumnDefinitions="Auto,*" Margin="0,2,0,0">
                                                <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="Bold" Margin="0,0,10,0" />
                                                <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Grid Grid.Row="3" ColumnDefinitions="*,Auto" Margin="0,10,0,0">
            <TextBlock Grid.Column="0" Name="StatusTextBlock" Text="{Binding StatusInfo}"
                       VerticalAlignment="Center" />
            <TextBlock Grid.Column="1" Name="FilePathTextBlock" Text="{Binding FilePath}"
                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis" MaxWidth="400" />
        </Grid>
    </Grid>
</UserControl>
