<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="https://github.com/avaloniaui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BalatroSaveToolkit.ViewModels"
             x:Class="BalatroSaveToolkit.Views.SaveContentView"
             mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:SaveContentViewModel />
    </UserControl.DataContext>
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <TextBlock Text="Save File Content Viewer" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
        <Border Grid.Row="1" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="5" Padding="10">
            <ScrollViewer>
                <TextBox Text="{Binding DisplayContent}" IsReadOnly="True" AcceptsReturn="True" FontFamily="Consolas" FontSize="14" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MinHeight="300"/>
            </ScrollViewer>
        </Border>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
            <Button Content="Reload" Command="{Binding LoadContentCommand}" IsEnabled="{Binding !IsLoading}" />
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="10,0,0,0"/>
            <ProgressBar IsVisible="{Binding IsLoading}" IsIndeterminate="True" Width="100" Height="16" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
